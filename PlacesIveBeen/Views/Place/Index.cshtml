@using PlacesIveBeen.Models;

<h1>This is where you've been:</h1>

@if (Model.Count == 0)
{
  <p>There are no saved places</p>
}
@foreach(Place place in Model)
{
  <h2>@place.CityName</h2>
  <ul>
    <li>@place.Durration</li>
    <li>People:</li>
    @foreach (string person in place.PeopleList)
    {
        <li>@person</li>
    }
    <li>@place.Description</li>
  </ul>
}

<a href="/place/new">Add a new Place!</a>

<form action="/place/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>